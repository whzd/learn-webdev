<%- include("partials/header.ejs") %>
    <div id="heading" class="box"><h1><%- date.dow %>, <%- date.month %> <%- date.day %></h1> </div>
    <div class="box">
        <% tasks.forEach((task) => { %>
          <form action="/remove" method="POST">
            <div class="item">
                <input type="checkbox" name="doneTaskID" value="<%= task._id %>" onChange="this.form.submit()">
                <p class="strikethrough"><%= task.name %></p>
            </div>
          </form>
            <hr>
        <% }) %>
        <div class="input">
            <form action="/" method="POST">
                <input type="text" name="newTask" placeholder="New Item" autocomplete="off">
                <button type="submit">+</button>
            </form>
        </div>
    </div>
<%- include("partials/footer.ejs") %>

